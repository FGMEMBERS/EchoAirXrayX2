<!--Fuel Low-->
<animation>
  <type>material</type>
  <object-name>stall</object-name>
<condition><or>
        <property>/controls/electric/battery-switch</property>
        <property>/systems/electrical/fuel-cell</property>
</or>
<or>
          <greater-than>
            <property>velocities/airspeed-kt</property>
            <value>46</value>
          </greater-than>
            <property>gear/gear[0]/wow</property>
            <property>gear/gear[1]/wow</property>
            <property>gear/gear[2]/wow</property>
</or>
</condition>
  <diffuse>
   <red>0.2</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </diffuse>
  <ambient>
   <red>0.2</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </ambient>
<emission>	
  <red>0.2</red>	
  <green>0.2</green>	
  <blue>0.2</blue>
 </emission>
 </animation>
<animation>
  <type>material</type>
  <object-name>stall</object-name>
<condition><or>

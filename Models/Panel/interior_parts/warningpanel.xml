<PropertyList>
<path>warningpanel.ac</path>
<!--Accumulator on/off-->
<animation>
  <type>material</type>
  <object-name>accumulator</object-name>
<condition><or>
        <property>/controls/electric/battery-switch</property>
        <property>/systems/electrical/fuel-cell</property>
</or>
<not>
        <property>/controls/electric/battery-switch</property></not>
</condition>
  <diffuse>
   <red>0.2</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </diffuse>
  <ambient>
   <red>0.2</red>
   <green>0.2</green>
   <blue>0.2</blue>
  </ambient>
<emission>	
  <red>0.2</red>	
  <green>0.2</green>	
  <blue>0.2</blue>
 </emission>
 </animation>

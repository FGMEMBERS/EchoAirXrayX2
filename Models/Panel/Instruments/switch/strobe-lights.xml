<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>on-off.ac</path>
  
  <animation>
    <!-- Objets opaques -->
    <object-name>base</object-name>
    <object-name>on-off</object-name>
    
    <!-- Objets transparents -->
  </animation>
  
<effect>
<inherits-from>Aircraft/EchoAirXray/Models/Effects/switch-lightmap</inherits-from>
<object-name>on-off</object-name>
</effect>
  
  <animation>
    <type>pick</type>
    <visible>true</visible>
    <object-name>on-off</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/lighting/strobe-lights</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>on-off</object-name>
    <property>controls/lighting/strobe-lights</property>
    <factor> 35 </factor>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
</PropertyList>
